{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts"]
}
